@model Publications.Web.Models.Publications.AuthorPositionInfo

@{
    ViewData["Title"] = "Редактировать должность";
}

<h2>@ViewData["Title"]</h2>

@using (Html.BeginForm("EditAuthorPosition", "Publications"))
