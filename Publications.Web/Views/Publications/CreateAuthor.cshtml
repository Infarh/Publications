@model Publications.Web.Models.Publications.AuthorInfo

@{
    ViewData["Title"] = "Создать автора";
}

<h2>Создать автора</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAuthor">
            <h4>Новый автор</h4>
            <hr />
            @Html.ValidationSummary(true, "Ошибка ввода данных", new { @class = "text-danger" })
            <div class="form-group">
                <p> @Html.LabelFor(m => m.AuthorSurname)</p>
                <p>@Html.EditorFor(m => m.AuthorSurname)</p>
                @Html.ValidationMessageFor(m => m.AuthorSurname)
            </div>
            <div class="form-group">
                <p>@Html.LabelFor(m => m.AuthorName)</p>
                <p>@Html.EditorFor(m => m.AuthorName)</p>
                @Html.ValidationMessageFor(m => m.AuthorName)
            </div>
            <div class="form-group">
                <p>@Html.LabelFor(m => m.AuthorPatronimyc)</p>
                <p>@Html.EditorFor(m => m.AuthorPatronimyc)</p>
                @Html.ValidationMessageFor(m => m.AuthorPatronimyc)
            </div>
            <div class="form-group">
                <p>@Html.LabelFor(m => m.AuthorBirthday)</p>
                <p>@Html.EditorFor(m => m.AuthorBirthday)</p>
                @Html.ValidationMessageFor(m => m.AuthorBirthday)
            </div>
            <button type="submit" class="btn btn-primary">Создать</button>
            <a asp-action="Index" class="btn">Назад</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}